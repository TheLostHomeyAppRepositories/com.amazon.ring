  "drivers": [
    {
      "id": "doorbell",
      "name": {
        "en": "Video Doorbell",
        "da": "Video dørklokke",
        "de": "Video Türklingel",
        "fr": "Sonnette vidéo",
        "it": "Campanello video",
        "nl": "Video deurbel",
        "no": "Videodørklokke",
        "es": "Videoportero",
        "sv": "Video dörrklocka"
      },
      "images": {
        "large": "./drivers/doorbell/assets/images/large.jpg",
        "small": "./drivers/doorbell/assets/images/small.jpg"
      },
      "class": "sensor",
      "capabilities": [
        "alarm_generic",
        "alarm_motion",
        "measure_battery"
      ],
      "energy": {
        "batteries": [
          "INTERNAL"
        ]
      },
      "pair": [
        {
          "id": "start"
